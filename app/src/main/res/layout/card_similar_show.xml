<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="mobile.shows.com.shows.features.singleshow.viewmodel.CardSimilarShowViewModel" />
    </data>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/similar_show_card_width"
            android:layout_height="@dimen/similar_show_card_height"
            android:layout_margin="@dimen/default_margin"
            android:elevation="5dp"
            android:layout_gravity="center"
            android:onClick="@{() -> viewModel.onClick()}"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:image="@{viewModel.showUrl}"/>

        </android.support.v7.widget.CardView>

    </FrameLayout>

</layout>